<%= form_for @kokkyo do |f| %>
  <div class="titleedit">
     <%= f.label :タイトル %>
     <br>
     <%= f.text_area :title, :size => "50x3" %> 
  </div>

  <div class="countryedit">
     <%= f.label :対象国 %>
     <br>
     <%= f.text_area :country, :size => "30x2" %>
  </div>

  <div class="issueedit">
     <%= f.label :解決すべき問題 %>
     <br>
     <%= f.text_area :issue, :size => "80x20" %> 
  </div>

  <div class="projectedit">
     <%= f.label :プロジェクト %>
     <br>
     <%= f.text_area :project, :size => "80x20" %>
  </div>

  <div class="pointedit">  
     <%= f.label :ポイント・キーワード %>
     <br>
     <%= f.text_area :point, :size => "50x3" %> 
  </div>

  <div class="imageedit">
     <%= f.label :イメージ画像 %>
     <br>
     <%= f.file_field :image %>
  </div>

  <%= f.submit "編集する" %>

<% end %>