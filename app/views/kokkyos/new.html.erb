<h1></h1>
<div class="box4">
  <p>新規投稿ページ</p>
</div>

<%= form_for @kokkyo do |f| %>
   <div class="check">
    
    <div class="title">
     <%= f.label :タイトル %>
     <br>
     <%= f.text_area :title, :size => "50x2" %>
    </div>

    <div class="country">
     <%= f.label :対象国 %>
     <br>
     <%= f.text_area :country, :size => "30x2" %>
    </div>

    <div class="issue">
     <%= f.label :解決すべき問題 %>
     <br>
     <%= f.text_area :issue, :size => "80x10" %>
    </div>

    <div class="project">
     <%= f.label :プロジェクト %>
     <br>
     <%= f.text_area :project, :size => "80x10" %>
    </div>

    <div class="point">
     <%= f.label :ポイント・キーワード %>
     <br>
     <%= f.text_area :point, :size => "80x3" %>
    </div>

    <div class="field">
     <%= f.label :イメージ画像・図解の投稿 %>
     <br>
     <%= f.file_field :image %>
    </div>

    <div class="put-box">
    <%= f.submit '投稿する' , class: "button" %>
    </div>
<% end %>

<%= link_to "一覧に戻る", kokkyos_path %>